    function merge_one_image(id,direction){
        $.ajax({
            'url': "/back/photo_guess/merge_one_image?id="+id+"&direction="+direction,
            'type': 'GET',
            'dataType': 'json',
            cache: false,
            async: 'false',
            success: function (json, st) {
                if (json.success) {
                    if (json.success) {
                         $("#image"+id+"").attr("src", $("#image"+id+"").attr("src")+"?"+ new Date().getTime());
                    }
                    else {
                        alert("图片生成失败");
