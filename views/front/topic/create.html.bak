<body ontouchstart="" class="mobile ">

<div data-role="page" class="clearfix page  ">
    <div class="fixed-background"></div>
    <header data-role="header" class="">
        <h1>

            <%=school.cn_short_name%>夜谈
        </h1>

    </header>
    <div class="main" data-role="content">
        <div class="main-content" style="min-height: 516px;">
            <form accept-charset="UTF-8" action="/postEx/create" class="center" id="new_entry" method="post" onsubmit="return checkSubmit()">
                <div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="✓"><input
                        name="authenticity_token" type="hidden" value="NqSPEoQY4+oTnELCM3hgml5QVozitZkXUNC/n6pjBdk=">
                </div>

                <h1 class="form-name"> <%=school.cn_short_name%>夜谈
</h1>

                <div class="form-description"><p style="font-size:15px">
                    <%=configuration.value%>
             </p></div>

                <fieldset>
                    <div class="form-content">

                        <div class="form-message gd-hide"></div>

                        <div class="field" data-api-code="field_1">
                            <div class="form-group ">
                                <label class="control-label field_title" data-role="collapse_toggle"
                                       for="entry_field_1">
                                    写下您自己的想法或经历...
                                    <span style="color: red;">*</span>
                                </label>
                                <div class="field_content">

                                    <div class="controls">
                                        <textarea class="gd-input-xxlarge" name="content" rows="3" placeholder="您的观点" required="required"
                                                  style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 110px;"></textarea>
                                        <input type="hidden" id="from_school_en_name" name="from_school_en_name"
                                               value="<%=school.en_name%>"/>
                                        <input type="hidden" id="from_school_cn_name" name="from_school_cn_name"
                                               value="<%=school.cn_name%>"/>
                                        <input type="hidden" id="type" name="type" value="<%=type%>"/>
                                        <input type="hidden" id="from_school_cn_short_name"
                                               name="from_school_cn_short_name" value="<%=school.cn_short_name%>"/>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="field" data-api-code="field_3">
                            <div class="form-group ">
                                <label class="control-label field_title" data-role="collapse_toggle" for="entry_field_3">
                                    留下您的昵称
                                </label>
                                <div class="field_content">
                                    <div class="controls">
                                        <input id="entry_field_3" name="content1" type="text" value="" placeholder="昵称">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="field submit-field ">
                            <div class="value">
                                <input id="embedded" name="embedded" type="hidden">
                                <input id="banner" name="banner" type="hidden">
                                <input id="background" name="background" type="hidden">
                                <input class="submit btn btn-primary" id="submit" data-disabled-with="提交中..." name="commit"
                                       type="submit" value="提交">
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

</div>


</body>
