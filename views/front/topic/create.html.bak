     <script language="javascript">
     var checkSubmitFlg = false;
     function checkSubmit() {
         if (!checkSubmitFlg) {
             checkSubmitFlg = true;
             return true;
         }else{
             alert("不用重复提交啦");
             return false;
         }
     }
 </script>

